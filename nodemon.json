{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "frontend"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "./public-keyboard/**/*",
    "./server/**/*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}